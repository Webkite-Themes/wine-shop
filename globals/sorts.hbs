{{~#if (find facets sortable=true)~}}
  <div class="webkite-sort-area">
    {{~#if sort.currentSort~}}
      {{~#each (select facets sortable=true)~}}
        {{~#if (equals name ../sort.currentSort)~}}
          <button class="webkite-toggle" data-target=".sort-menu" type="button" title="{{t "Sorted by" default="Sorted by"}}: {{displayName}}"><span class="webkite-toggle" data-target=".sort-menu">
            {{displayName}}
          </span><i></i></button>
        {{~/if~}}
      {{~/each~}}
    {{~else~}}
      <button class="webkite-toggle" data-target=".sort-menu" type="button" title="{{t "Sort" default="Sort"}}"><span class="webkite-toggle" data-target=".sort-menu">
        {{t "Sort" default="Sort"}}
      </span><i></i></button>
    {{/if~}}
    <ul class="sort-menu webkite-menu webkite-hide">
      {{#unless sort.hideDefault~}}
        <li class="webkite-apply-sort{{#unless sort.currentSort}} webkite-active{{/unless}}">
          <a href="#"{{#unless sort.currentSort}} class="webkite-toggle" data-target=".sort-menu"{{/unless}} data-sort="">{{t "Default Sort" default="Default Sort"}}</a>
        </li>
      {{~/unless}}
      {{#each (select facets sortable=true)}}      
        <li class="webkite-apply-sort{{#if (equals name ../sort.currentSort)}} webkite-active{{/if}}"><a href="#" class="{{../sort.currentDirection}}" data-sort="{{name}}">{{displayName}}</a></li>
      {{/each}}
    </ul>
  </div>
{{~/if~}}